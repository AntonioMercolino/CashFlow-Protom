<odoo>

    <!-- ========================================================= -->
    <!--     MENU + ACTION                                         -->
    <!-- ========================================================= -->

    <menuitem id="menu_cashflow_loan_root"
              name="Mutui e Leasing"
              parent="menu_cashflow_root"
              sequence="40"/>

    <record id="action_cashflow_loan" model="ir.actions.act_window">
        <field name="name">Mutui e Leasing</field>
        <field name="res_model">cashflow.loan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cashflow_loan_action"
              parent="menu_cashflow_loan_root"
              action="action_cashflow_loan"/>

    <!-- ========================================================= -->
    <!--     TREE VIEW                                             -->
    <!-- ========================================================= -->

    <record id="view_cashflow_loan_tree" model="ir.ui.view">
        <field name="name">cashflow.loan.tree</field>
        <field name="model">cashflow.loan</field>
        <field name="arch" type="xml">
            <tree string="Mutui e Leasing">
                <field name="name"/>
                <field name="loan_type"/>
                <field name="bank_id"/>
                <field name="principal_amount"/>
                <field name="interest_rate"/>
                <field name="duration_months"/>
                <field name="installment_amount"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- ========================================================= -->
    <!--     FORM VIEW                                             -->
    <!-- ========================================================= -->

    <record id="view_cashflow_loan_form" model="ir.ui.view">
        <field name="name">cashflow.loan.form</field>
        <field name="model">cashflow.loan</field>
        <field name="arch" type="xml">
            <form string="Mutuo / Leasing" create="1" edit="1">
                
                <header>
                    <button name="action_generate_installments"
                            type="object"
                            string="Genera Piano Rate"
                            class="btn-primary"
                            attrs="{'invisible': [('state','!=','draft')]}"
                    />
                    <button name="%(action_cashflow_loan_installment)d"
                            string="Mostra Rate"
                            type="action"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active,closed"/>
                </header>

                <sheet>
                    <group>
                        <group string="Informazioni Generali">
                            <field name="name"/>
                            <field name="loan_type"/>
                            <field name="bank_id"/>
                            <field name="company_id" readonly="1"/>
                        </group>

                        <group string="Importi">
                            <field name="principal_amount"/>
                            <field name="interest_rate"/>
                            <field name="duration_months"/>
                            <field name="installment_amount" readonly="1"/>
                            <field name="currency_id" readonly="1"/>
                        </group>
                    </group>

                    <group string="Periodo">
                        <field name="start_date"/>
                        <field name="end_date" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Rate Generate">
                            <field name="installment_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
