<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cashflow_forecast_line_graph" model="ir.ui.view">
            <field name="name">cashflow.forecast.line.graph</field>
            <field name="model">cashflow.forecast.line</field>
            <field name="arch" type="xml">
                <graph string="Grafico Cashflow (Entrate vs. Uscite)" type="bar">
                    <field name="date" interval="month" type="row"/> 
                    
                    <field name="type" type="col"/> 
                    
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>
    
    <record id="view_cashflow_forecast_line_pivot" model="ir.ui.view">
        <field name="name">cashflow.forecast.line.pivot</field>
        <field name="model">cashflow.forecast.line</field>
        <field name="arch" type="xml">
            <pivot string="Riepilogo Forecast Cashflow">
                <field name="date" interval="month" type="row"/> 
                <field name="business_unit_id" type="row"/>
                
                <field name="type" type="col"/> 
                
                <field name="amount" type="measure"/>
            </pivot>
        </field>
    </record>
</odoo>