<odoo>
    <record id="cashflow_dashboard_wizard_form" model="ir.ui.view">
        <field name="name">cashflow.dashboard.wizard.form</field>
        <field name="model">cashflow.dashboard.wizard</field>
        <field name="arch" type="xml">
            <form string="Imposta Dashboard Cashflow">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="bank_ids" widget="many2many_tags"/>
                    <field name="include_simulation"/>
                </group>
                <footer>
                    <button name="action_open_dashboard" 
                            type="object" 
                            string="Visualizza Dashboard" 
                            class="oe_highlight"
                            data-hotkey="v"/>
                    <button string="Annulla" 
                            class="btn-secondary" 
                            special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cashflow_dashboard_wizard" model="ir.actions.act_window">
        <field name="name">Dashboard Cashflow</field>
        <field name="res_model">cashflow.dashboard.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> </record>
</odoo>